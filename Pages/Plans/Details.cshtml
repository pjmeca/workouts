@page "{id:guid}"
@model Workouts.Pages.Plans.DetailsModel
@{
    ViewData["Title"] = "Plan details";
}

@if (Model.NotFound)
{
    <div class="alert alert-warning">Plan not found.</div>
}
else
{
        <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
            <div>
                <h1 class="page-title">@Model.Plan.Name</h1>
                <p class="text-muted mb-0">@Model.Plan.Description</p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary" asp-page="/Plans/Days/Create" asp-route-planId="@Model.Plan.Id">Add day</a>
                <a class="btn btn-outline-primary" asp-page="/Index">Back</a>
            </div>
        </div>

    <form id="dayReorderToken" method="post" class="d-none">
        @Html.AntiForgeryToken()
    </form>

    @if (Model.Plan.Days.Count == 0)
    {
        <div class="empty-state">
            <h2 class="h5 mb-2">No days yet</h2>
            <p class="text-muted mb-3">Add your first training day to start building this plan.</p>
            <a class="btn btn-primary" asp-page="/Plans/Days/Create" asp-route-planId="@Model.Plan.Id">Add day</a>
        </div>
    }
    else
    {
        <p class="text-muted small mb-3">Drag a day card to reorder or use the arrows.</p>
        <div class="day-list" id="dayList" data-plan-id="@Model.Plan.Id" role="list">
            @foreach (var day in Model.Plan.Days)
            {
                <section class="day-card mb-4" data-day-id="@day.Id" data-order-index="@day.OrderIndex" draggable="true" role="listitem">
                <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2 mb-2">
                    <div class="d-flex align-items-center gap-2">
                        <div class="day-order-controls">
                            <form method="post" asp-page-handler="MoveDay" asp-route-planId="@Model.Plan.Id" asp-route-dayId="@day.Id" class="d-inline">
                                <input type="hidden" name="delta" value="-1" />
                                <button class="btn btn-outline-secondary btn-sm day-move" type="submit" data-delta="-1" aria-label="Move day up">↑</button>
                            </form>
                            <form method="post" asp-page-handler="MoveDay" asp-route-planId="@Model.Plan.Id" asp-route-dayId="@day.Id" class="d-inline">
                                <input type="hidden" name="delta" value="1" />
                                <button class="btn btn-outline-secondary btn-sm day-move" type="submit" data-delta="1" aria-label="Move day down">↓</button>
                            </form>
                        </div>
                        <div>
                            <h2 class="h5 mb-0">@day.Name</h2>
                            @if (!string.IsNullOrWhiteSpace(day.Notes))
                            {
                                <p class="text-muted mb-0">@day.Notes</p>
                            }
                        </div>
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Plans/Play" asp-route-planId="@Model.Plan.Id" asp-route-dayId="@day.Id" aria-label="Start training">▶</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-page="/Plans/Days/Edit" asp-route-planId="@Model.Plan.Id" asp-route-dayId="@day.Id">Edit</a>
                        <form method="post" asp-page-handler="DeleteDay" asp-route-planId="@Model.Plan.Id" asp-route-dayId="@day.Id" class="d-inline" id="delete-day-@day.Id">
                            <button class="btn btn-sm btn-outline-danger" type="button" data-confirm="modal" data-confirm-form="delete-day-@day.Id" data-confirm-message="Are you sure you want to delete this day and all its exercises?">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle exercise-table">
                        <thead>
                            <tr>
                                <th>Exercise</th>
                                <th>Sets</th>
                                <th>Reps</th>
                                <th>Rest</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody data-day-id="@day.Id">
                            @if (day.Exercises.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-muted text-center py-4">No exercises yet.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var exercise in day.Exercises)
                                {
                                    <tr data-exercise-id="@exercise.Id">
                                        <td data-label="Exercise">@exercise.Name</td>
                                        <td data-label="Sets">@exercise.Sets</td>
                                        <td data-label="Reps">@exercise.Repetitions</td>
                                        <td data-label="Rest">@((exercise.RestSeconds ?? 0))s</td>
                                        <td class="text-end" data-label="Actions">
                                            <div class="exercise-actions">
                                                <div class="exercise-order-controls">
                                                    <button class="btn btn-sm btn-outline-secondary exercise-move" type="button" data-delta="-1" aria-label="Move exercise up">↑</button>
                                                    <button class="btn btn-sm btn-outline-secondary exercise-move" type="button" data-delta="1" aria-label="Move exercise down">↓</button>
                                                </div>
                                                <button class="btn btn-sm btn-outline-secondary" type="button" data-exercise-modal data-plan-id="@Model.Plan.Id" data-day-id="@day.Id" data-exercise-id="@exercise.Id">Edit</button>
                                                <form method="post" asp-page-handler="DeleteExercise" asp-route-planId="@Model.Plan.Id" asp-route-dayId="@day.Id" asp-route-exerciseId="@exercise.Id" class="d-inline" id="delete-exercise-@day.Id-@exercise.Id">
                                                    <button class="btn btn-sm btn-outline-danger" type="button" data-confirm="modal" data-confirm-form="delete-exercise-@day.Id-@exercise.Id" data-confirm-message="Are you sure you want to delete this exercise and its image?">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <button class="btn btn-sm btn-primary" type="button" data-exercise-modal data-plan-id="@Model.Plan.Id" data-day-id="@day.Id">Add exercise</button>
                </section>
            }
        </div>
    }
}

<div class="modal fade" id="exerciseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exerciseModalTitle">Exercise</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="exerciseModalBody">
                <p class="text-muted">Loading...</p>
            </div>
        </div>
    </div>
</div>
