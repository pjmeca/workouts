@model Workouts.Pages.Plans.ExerciseInputModel
@{
    var title = ViewData["FormTitle"] as string ?? "Exercise";
    var existingImageName = ViewData["ExistingImageName"] as string;
    var existingImageUrl = ViewData["ExistingImageUrl"] as string;
}

<form method="post" enctype="multipart/form-data" asp-page="/Plans/Details" asp-page-handler="SaveExercise" data-exercise-form>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PlanId" />
    <input type="hidden" asp-for="DayId" />
    <input type="hidden" asp-for="ExerciseId" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6 mb-3">
            <label asp-for="Sets" class="form-label"></label>
            <input asp-for="Sets" class="form-control" type="number" min="1" step="1" inputmode="numeric" pattern="[0-9]*" data-integer-only />
            <span asp-validation-for="Sets" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="Repetitions" class="form-label"></label>
            <input asp-for="Repetitions" class="form-control" type="number" min="1" step="1" inputmode="numeric" pattern="[0-9]*" data-integer-only />
            <span asp-validation-for="Repetitions" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="RestSeconds" class="form-label"></label>
        <input asp-for="RestSeconds" class="form-control" type="number" min="0" step="1" inputmode="numeric" pattern="[0-9]*" data-integer-only />
        <span asp-validation-for="RestSeconds" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" type="file" accept="image/*" data-compress-image="true" />
        <span asp-validation-for="Image" class="text-danger"></span>
        @if (!string.IsNullOrWhiteSpace(existingImageName))
        {
            <div class="form-text">
                Current image:
                @if (!string.IsNullOrWhiteSpace(existingImageUrl))
                {
                    <a href="@existingImageUrl" target="_blank" rel="noopener"> @existingImageName</a>
                }
                else
                {
                    @existingImageName
                }
            </div>
        }
    </div>

    <div class="d-flex gap-2 justify-content-end">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
